#!/usr/bin/env python


import click

from hol.jobs import IndexCount


@click.command()

@click.option(
    '--group_size',
    help='Process the corpus in groups of N paths.',
    default=1000,
)

def index_count(group_size):

    """
    Index year -> token -> count.
    """

    job = IndexCount(group_size)

    job.run()



if __name__ == '__main__':
    index_count()
